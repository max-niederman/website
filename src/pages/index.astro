---
import { Icon } from "astro-icon/components";

import BaseLayout from "~/layouts/BaseLayout.astro";
import ScrapeObfuscatedLink from "~/components/ScrapeObfuscatedLink.svelte";
---

<BaseLayout title="Max Niederman">
	<header>
		<h1>Max Niederman</h1>
	</header>

	<main class="type">
		<p>
			Hello! I'm Max. This is my personal website, where I write about things I
			find interesting and share projects I'm working on.
		</p>

		<p>
			I am an undergraduate student at
			<a href="https://reed.edu">Reed College</a> interested in mathematics and computing.
			I am a hobbyist programmer and enjoy contributing to open source projects such
			as
			<a href="https://rust-lang.org">the Rust language</a>
			and <a href="https://github.com/max-niederman/ttyper">ttyper</a>, a TUI
			typing test I created. I was also programming lead of
			<a href="https://3636.team"> FRC team 3636 </a>
			for two years.
		</p>

		<ul class="links-row">
			<li>
				<a href="https://github.com/max-niederman">GitHub</a>
			</li>
			<li>
				<a href="https://www.linkedin.com/in/max-niederman/">LinkedIn</a>
			</li>
			<li>
				<ScrapeObfuscatedLink
					hrefBase64={btoa("mailto:max@maxniederman.com")}
					client:load
				>
					Email</ScrapeObfuscatedLink
				>
			</li>
			<li>
				<a href="https://discord.com/users/311324287086624768">Discord</a>
			</li>
		</ul>
	</main>
</BaseLayout>

<style lang="scss">
	@use "~/styles/links.scss";
	@use "~/styles/type.scss";

	body {
		margin: 0 auto;
		padding: 0 2ch;
		max-width: 80ch;
	}

	h1 {
		font-size: 2.5rem;
		font-style: italic;
		font-weight: 450;
		font-feature-settings: "swsh", "calt";
	}

	.links-row {
		list-style: none;
		padding: 0;

		display: flex;
		flex-wrap: wrap;
		gap: 1rem;
	}
</style>
