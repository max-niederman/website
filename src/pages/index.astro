---
import "~/styles/global.scss";

import BaseLayout from "~/layouts/BaseLayout.astro";
import StripeGradient from "~/components/StripeGradient.svelte";

import icon from "~/images/favicon.svg";
---

<BaseLayout title="Max Niederman">
	<div class="bg">
		<StripeGradient client:load />
	</div>

	<header>
		<div class="title-line">
			<img src={icon.src} alt="Max Niederman's logo" />
			<h1>Max Niederman</h1>
		</div>
		<p>
			I am an undergraduate student interested in mathematics, software, and
			engineering.
		</p>
	</header>

	<main>
		<div class="under-construction">This site is under construction.</div>
	</main>
</BaseLayout>

<style lang="scss">
	.bg {
		position: fixed;
		top: 0;
		left: 0;
		z-index: -1;
		width: 100svw;
		height: 100svh;
	}

	main,
	header {
		margin: 0 auto;
		max-width: 75ch;

		padding: 2rem 0;
	}

	header {
		margin-top: 1rem;

		color: hsl(0deg 0% 60%);
		mix-blend-mode: color-dodge;

		.title-line {
			display: flex;
			align-items: center;
			gap: 1rem;
		}

		h1 {
			margin: 1rem 0;
			font-weight: 700;
		}

		img {
			filter: invert(60%);
		}
	}

	main {
		display: grid;
		grid-template-columns: 1fr 1fr 1fr;
		grid-auto-rows: 12rem;

		color: white;

		.under-construction {
			grid-column: 1 / 4;

			display: flex;
			align-items: center;
			justify-content: center;

			font-size: 2rem;

			background: hsla(0deg, 10%, 75%, 0.2);
			border-radius: 16px;
			box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
			border: 1px solid hsla(0deg, 0%, 100%, 0.3);
		}
	}
</style>
