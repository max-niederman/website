---
import MarginNav from "~/components/MarginNav.svelte";
import BaseLayout from "./BaseLayout.astro";

export interface Props {
    title: string;
}
const { title } = Astro.props;
---

<BaseLayout {title}>
    <slot />

    <div class="margin margin-left">
        <slot name="left-margin" />
    </div>
    <div class="margin margin-right">
        <slot name="right-margin" />
    </div>
</BaseLayout>

<style lang="scss">
	body {
		margin: 0 auto;
		padding: 0 2ch;
		max-width: 80ch;
	}

    .margin {
        position: fixed;
        top: 0;
        height: 100%;
        width: calc((100vw - 80ch) / 2 + 2ch);
        min-width: 2ch;
    }
    
    .margin-left {
        left: 0;
    }

    .margin-right {
        right: 0;
    }
</style>