---
import BaseLayout from "./BaseLayout.astro";

import "~/styles/type.scss";

export interface Props {
    title: string;
}
const { title } = Astro.props;
---

<BaseLayout {title}>
    <header class="type">
        <h1>{title}</h1>
    </header>

    <main class="type">
        <slot />
    </main>
</BaseLayout>

<style is:global lang="scss">
    body {
        margin: 0 auto;
        max-width: 120ch;
    }

    main {
    }
</style>